<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:paddingTop="0dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true">
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right" android:baselineAligned="false">
            <TextView
                    android:paddingLeft="15dp"
                    android:id="@+id/nameOfEditedDay"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_alignParentLeft="true"
                    android:gravity="left"/>
            <Button
                    android:layout_marginTop="0dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkred"
                    android:layout_alignParentRight="true"
                    android:textSize="60dp"
                    android:text="@string/exit"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@color/red"
                    android:onClick="onExitDayActivityClicked"/>
        </RelativeLayout>
        <TextView
                android:id="@+id/description"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/editDayActivityDescription"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"/>
    </LinearLayout>


    <re.breathpray.com.RelativeLayoutForCircle
            android:id="@+id/circleLayout"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
        <com.triggertrap.seekarc.SeekArc
                android:id="@+id/seekArcStart"
                android:padding="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        <com.triggertrap.seekarc.SeekArc
                android:padding="50dp"
                android:id="@+id/seekArcEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

        <Button android:id="@+id/toggleFocusSeekarcButton"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:background="@drawable/roundbutton"
                android:onClick="onSeekarcFocusChangeButtonClicked"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true">
            <TextView android:textColor="@color/lightgrey"
                      android:textSize="19dp"
                      android:paddingBottom="10dp"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:layout_width="wrap_content"
                      android:text="@string/clickMe" android:layout_gravity="center_horizontal"/>
            <TextView android:id="@+id/startTimeTextInButton"
                      android:paddingTop="10dp"
                      android:textColor="@color/grey"
                      android:textSize="21dp"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:layout_width="wrap_content" android:layout_gravity="center_horizontal"/>
            <TextView android:textColor="@color/lightgrey"
                      android:gravity="center"
                      android:textSize="19dp"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:text="@string/until" android:layout_gravity="center_horizontal"/>
            <TextView android:id="@+id/endTimeTextInButton"
                      android:gravity="center"
                      android:textColor="@color/grey"
                      android:textSize="21dp"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content" android:layout_gravity="center_horizontal"/>

        </LinearLayout>


    </re.breathpray.com.RelativeLayoutForCircle>

</RelativeLayout>