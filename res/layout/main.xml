<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res/re.breathpray.com">
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView" android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true" android:layout_marginTop="0dp" android:layout_marginBottom="50dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/vibrationCycleTime"
                        android:id="@+id/textViewRepeatTime" android:gravity="center|left"/>
                <antistatic.spinnerwheel.WheelHorizontalView android:id="@+id/repeatTime"
                                                             app:visibleItems="5"
                                                             app:selectionDivider="@drawable/divider_dark_gradient_horizontal"
                                                             app:selectionDividerWidth="1px"
                                                             android:layout_height="wrap_content"
                                                             android:layout_width="wrap_content"/>
                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="#FF0000FF"
                        />
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_gravity="left|center_vertical">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/vibrationTime"
                        android:id="@+id/textViewVibrateDuration" android:layout_gravity="center_horizontal|top"
                        android:gravity="center|left"/>
                <antistatic.spinnerwheel.WheelHorizontalView android:id="@+id/vibrationDuration"
                                                             app:visibleItems="5"
                                                             app:selectionDivider="@drawable/divider_dark_gradient_horizontal"
                                                             app:selectionDividerWidth="1px"
                                                             android:layout_height="wrap_content"
                                                             android:layout_width="wrap_content"/>
                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="#FF0000FF"
                        />
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_gravity="left|center_vertical">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/VibrationStartDay"
                        android:id="@+id/textViewStartTime" android:layout_gravity="center|bottom" android:gravity="center|left"/>
                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal">

                    <antistatic.spinnerwheel.WheelVerticalView android:id="@+id/startHour"
                                                               android:layout_height="wrap_content"
                                                               android:layout_width="50dp"/>
                    <antistatic.spinnerwheel.WheelVerticalView android:id="@+id/startMinute"
                                                               android:layout_height="wrap_content"
                                                               android:layout_width="50dp"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/VibrationEndDay"
                        android:id="@+id/textViewEndTime" android:layout_gravity="center" android:gravity="center|left"/>
                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal">

                    <antistatic.spinnerwheel.WheelVerticalView android:id="@+id/endHour"
                                                               android:layout_height="wrap_content"
                                                               android:layout_width="50dp"/>
                    <antistatic.spinnerwheel.WheelVerticalView android:id="@+id/endMinute"
                                                               android:layout_height="wrap_content"
                                                               android:layout_width="50dp"/>
                </LinearLayout>
                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="#FF0000FF"
                        />
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:gravity="left|top">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vibrationPower"
                        android:id="@+id/textViewVibratePower"/>
                <SeekBar
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/seekBar"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/takeABreak"
                        android:id="@+id/textViewTakeABreak"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <antistatic.spinnerwheel.WheelHorizontalView android:id="@+id/breakTimeWheel"
                                                                 app:visibleItems="5"
                                                                 app:selectionDivider="@drawable/divider_dark_gradient_horizontal"
                                                                 app:selectionDividerWidth="1px"
                                                                 android:layout_height="wrap_content"
                                                                 android:layout_width="wrap_content"/>
                    <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/takeABreakButton"
                            android:id="@+id/button" android:onClick="onTakeABreakClicked"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lastVibrate"
                        android:id="@+id/textViewLastVibrate"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nextVibrate"
                        android:id="@+id/textViewNextVibrate"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prayerReminderStatus"
                        android:id="@+id/textViewStatus"/>
                <ToggleButton
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/toggleButton" android:onClick="onToggleButtonClick"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/adView"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="50dip" android:layout_gravity="top" android:gravity="top"
            android:layout_alignParentLeft="true" android:layout_marginLeft="0dp" android:layout_alignParentTop="false"
            android:layout_marginTop="1230dp" android:layout_alignParentBottom="true">
    </LinearLayout>
</RelativeLayout>